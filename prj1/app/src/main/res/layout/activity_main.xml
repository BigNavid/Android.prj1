<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.sharif.prj1.st92106356.st92110238.prj1.MainActivity"
    android:background="@color/other_fragments">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <fragment android:name="io.sharif.prj1.st92106356.st92110238.prj1.Animation_ICON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/animation_fregment"/>

    <fragment android:name="io.sharif.prj1.st92106356.st92110238.prj1.Game_ICON"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/game_icon_fragment"
        tools:layout="@layout/game_icon_fragment" />

    <fragment android:name="io.sharif.prj1.st92106356.st92110238.prj1.Game_ArrowKeys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/game_arroe_fragment"/>

</android.widget.LinearLayout>
